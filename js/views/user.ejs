<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title float-left">مشخصات</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <%- include("./partials/registerError") %>
    <form action="" method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="name">نام</label>
                <input type="text" class="form-control" id="name" name="firstName" placeholder="" value="<%= typeof user.firstName != 'undefined'?user.firstName:''%>">
            </div>
            <div class="form-group">
                <label for="lname">نام خانوادگی</label>
                <input type="text" class="form-control" id="lname" name="lastName" placeholder="" value="<%= typeof user.lastName != 'undefined'?user.lastName:''%>">
            </div>
            <div class="form-group">
                <label for="username">نام کاربری</label>
                <input type="text" class="form-control" disabled id="username" name="username" placeholder="" value="<%= typeof user.username != 'undefined'?user.username:''%>">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">گذرواژه جدید</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="firstPassword" placeholder="" value="*">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword2">تکرار گذرواژه جدید</label>
                <input type="password" class="form-control" id="exampleInputPassword2" name="secondPassword" placeholder="" value="*">
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">ویرایش</button>
        </div>
    </form>
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">حذف</button>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">آیا از حذف مطمعن هستید</h4>
                    <button type="button" class="close float-right" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form action="/deleteUser" method="post">
                        <input type="text" name="username" class="d-none" value="<%= user.username%>">
                        <button type="button" class="btn btn-success" data-dismiss="modal">خیر</button>
                        <button class="btn btn-danger">بله</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>